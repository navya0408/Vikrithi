<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="/login.css">
    <style>
        /* Styles for the popup */
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            border: 1px solid #ccc;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            width: 300px;
            padding: 20px;
            text-align: center;
        }
        .popup button {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
        }
        .popup button:hover {
            background-color: #0056b3;
        }
        /* Overlay background */
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        /* Toggle Switch Styles */
        .toggle-container {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            margin-top: 10px;
        }

        .toggle {
            position: relative;
            display: inline-block;
            width: 100px;
            height: 40px;
            margin-left: 10px;
        }

        .toggle input {
            display: none;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #6ab49d; /* Red for Recycler */
            border-radius: 20px;
            transition: 0.4s;
        }

        .slider:before {
            position: absolute;
            content: "Recycler";
            color: white;
            font-size: 16px;
            text-align: center;
            line-height: 40px;
            width: 100%;
            height: 100%;
            transition: 0.4s;
        }

        input:checked + .slider {
            background-color: #0e7b6b; /* Green for Donor */
        }

        input:checked + .slider:before {
            content: "Donor";
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-section">
            <div class="login-box">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <h2>Welcome back</h2>
                        <p>Please enter your details</p>
                    </div>
                    <!-- Toggle Section -->
                    <div class="toggle-container">
                        <label for="role">Role:</label>
                        <div class="toggle">
                            <input type="checkbox" id="role" name="role" value="donor" onchange="updateRoleValue()">
                            <span class="slider"></span>
                        </div>
                    </div>
                </div>
                <form action="/login" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    </div>
                    <div class="form-options">
                        <div>
                            <input type="checkbox" id="remember" />
                            <label for="remember">Remember me</label>
                        </div>
                        <a href="/forgotpass">Forgot password?</a>
                    </div>
                    <!-- Hidden role field -->
                    <input type="hidden" name="userType" id="userType" value="recycler">
                    <button type="submit" class="btn">Sign in</button>
                </form>
                <p class="signup-link">
                    <a href="/signup">Make a new account</a>
                </p>
            </div>
        </div>
        <div class="right-section"></div>
    </div>

    <!-- Popup for error -->
    <div class="overlay" id="overlay"></div>
    <div class="popup" id="popup">
        <img src="https://tse3.mm.bing.net/th?id=OIP._3FW31MNxQ8yxbmHDkL0CwAAAA&pid=Api&P=0&h=180" alt="Error icon">
        <p id="popup-message">Oops! Looks like we didn't find your account. Wanna try again?</p>
        <button onclick="closePopup()">try again</button>
    </div>

    <script>
        // Update role value when toggle is changed
        function updateRoleValue() {
            const role = document.getElementById("role");
            const userTypeInput = document.getElementById("userType");
            userTypeInput.value = role.checked ? "donor" : "recycler";
        }

        // Show popup if there's an error
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("error")) {
            document.getElementById("overlay").style.display = "block";
            document.getElementById("popup").style.display = "block";
        }

        // Function to close popup
        function closePopup() {
            document.getElementById("overlay").style.display = "none";
            document.getElementById("popup").style.display = "none";
            window.location.href = "/"; // Redirect to login
        }
    </script>
</body>
</html>
